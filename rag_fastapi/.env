# RAG FastAPI Configuration

# Application settings
APP_NAME="RAG FastAPI"
APP_VERSION="0.1.0"
LOG_LEVEL="INFO"
API_PREFIX="/api"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_TIMESCALE="minute"

# CORS Origins
# Example: CLIENT_ORIGIN="http://localhost:3000,http://127.0.0.1:3000"
CLIENT_ORIGIN=""

# Embedding and Generation Model Configuration
# Supported providers: "openai", "gemini", "local"
LLM_PROVIDER="gemini"

# For Google Gemini
# IMPORTANT: Replace "YOUR_GEMINI_API_KEY_HERE" with a valid API key from Google AI Studio (https://aistudio.google.com/app/apikey)
# Ensure this key has permissions for content generation with 'models/gemini-pro'.
GEMINI_API_KEY=AIzaSyB9ouDkJgDGEOUkIpekNjxSuyDyO1eeEhw
GEMINI_EMBEDDING_MODEL="models/embedding-001"
GEMINI_GENERATION_MODEL="gemini-2.5-flash"

# For OpenAI
OPENAI_API_KEY="your_openai_api_key"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
OPENAI_GENERATION_MODEL="gpt-3.5-turbo"

# For Local SentenceTransformer
LOCAL_EMBEDDING_MODEL="all-MiniLM-L6-v2"

# Vector Store Configuration
# Path to store FAISS index and other data
VECTOR_STORE_PATH="./.vector_store"
DOCUMENT_STORE_PATH="./.document_store"

# Crawler Settings
CRAWLER_USER_AGENT="Mozilla/5.0 (compatible; RAGFastAPIBot/0.1; +http://yourdomain.com/bot)"
CRAWLER_REQUEST_TIMEOUT=10 # in seconds
CRAWLER_MAX_RETRIES=3

# Logging
LOG_PATH="logs/"

# Celery & Redis for local development
CREDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

GEMINI_API_BASE=https://generativelanguage.googleapis.com/v1beta
